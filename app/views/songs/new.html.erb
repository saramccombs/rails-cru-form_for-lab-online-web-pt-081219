<h1>Create a New Song</h1>

<%= form_for (@song) do |f| %>

    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :artist_id %>
        <%= f.text_field :artist_id %>
    </p>
    <p>
        <%= f.label :genre_id %>
        <%= f.text_field :genre_id %>
    </p>

    <%= f.submit %>

<% end %>

<h3>Current Artists</h3>
<% @artists.each do |a| %>
    <p>
        <%= a.id %>. <%= a.name %>
    </p>
<% end %>

<h3>Current Genres</h3>
<% @genres.each do |g| %>
    <p>
        <%= g.id %>. <%= g.name %>
    </p>
<% end %>